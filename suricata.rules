# 1. ICMP Echo Request
alert icmp any any -> any any (
  msg:"ICMP Echo Request Detected";
  itype:8;
  classtype:icmp-event;
  sid:1000001; rev:1;
)

# 2. ICMP Echo Reply
alert icmp any any -> any any (
  msg:"ICMP Echo Reply Detected";
  itype:0;
  classtype:icmp-event;
  sid:1000002; rev:1;
)

# 3. DNS Query
alert udp any any -> any 53 (
  msg:"DNS Query Detected";
  content:"|01 00|"; offset:2; depth:2;
  classtype:protocol-command-decode;
  sid:1000003; rev:2;
)

# 4. HTTP GET Request
alert http any any -> any any (
  msg:"HTTP GET Request Detected";
  flow:established,to_server;
  content:"GET"; http.method;
  sid:1000004; rev:1;
)

# 5. SQLMap User-Agent
alert http any any -> any any (
  msg:"Possible SQL Injection Attempt (sqlmap)";
  flow:to_server,established;
  content:"sqlmap"; http_user_agent; nocase;
  classtype:web-application-attack;
  sid:1000005; rev:2;
)

# 6. FTP Login Attempt
alert tcp any any -> any 21 (
  msg:"FTP Login Attempt";
  flow:to_server,established;
  content:"USER "; nocase;
  classtype:attempted-admin;
  sid:1000006; rev:1;
)

# 7. SMTP HELO Command
alert tcp any any -> any 25 (
  msg:"SMTP HELO Command Detected";
  content:"HELO"; nocase;
  classtype:protocol-command-decode;
  sid:1000007; rev:1;
)

# 8. TLS Client Hello (general - no tls.version)
alert tls any any -> any any (
  msg:"TLS Client Hello Detected";
  classtype:protocol-command-decode;
  sid:1000008; rev:3;
)

# 9. SMB Access
alert tcp any any -> any 445 (
  msg:"SMB Protocol Access Detected";
  classtype:protocol-command-decode;
  sid:1000009; rev:2;
)

# 10. SSH Brute Force
alert tcp any any -> $HOME_NET 22 (
  msg:"SSH Brute Force Attempt";
  flow:to_server,established;
  threshold:type threshold, track by_src, count 5, seconds 30;
  classtype:attempted-admin;
  sid:1000010; rev:1;
)

# 11. Slowloris DoS
alert http any any -> any $HTTP_PORTS (
  msg:"Possible Slowloris DoS Attack Detected";
  flow:established,to_server;
  content:"GET"; http.method;
  threshold:type both, track by_src, count 10, seconds 60;
  classtype:denial-of-service;
  sid:1000011; rev:1;
)

# 12. UDP Flood
alert udp any any -> any any (
  msg:"Possible UDP Flood DDoS Detected";
  threshold:type both, track by_dst, count 1000, seconds 10;
  classtype:denial-of-service;
  sid:1000012; rev:1;
)

# 13. SYN Flood
alert tcp any any -> any any (
  msg:"Possible SYN Flood DoS Detected";
  flags:S;
  threshold:type both, track by_src, count 50, seconds 10;
  classtype:denial-of-service;
  sid:1000013; rev:1;
)

# 14. HTTP Flood
alert http any any -> any $HTTP_PORTS (
  msg:"Possible HTTP Flood DDoS Detected";
  flow:established,to_server;
  content:"GET|0d0a|"; http.method;
  threshold:type both, track by_dst, count 500, seconds 30;
  classtype:denial-of-service;
  sid:1000014; rev:1;
)

# 15. SQLi: CASE WHEN in URI
alert http any any -> any any (
  msg:"SQL Injection Detected in URL (CASE WHEN)";
  flow:to_server,established;
  content:"CASE WHEN"; nocase; http.uri;
  classtype:web-application-attack;
  sid:1000015; rev:3;
)

# 16. SQLi: UNION SELECT in URI
alert http any any -> any any (
  msg:"SQL Injection via UNION SELECT in URL";
  flow:to_server,established;
  content:"UNION SELECT"; nocase; http.uri;
  classtype:web-application-attack;
  sid:1000016; rev:3;
)

# 17. SQLi: AND = in URI
alert http any any -> any any (
  msg:"SQL Injection Logic Pattern Detected (AND =)";
  flow:to_server,established;
  content:"AND ="; nocase; http.uri;
  classtype:web-application-attack;
  sid:1000017; rev:2;
)

# 18. SQLi: AND 'A'='A' in URI
alert http any any -> any any (
  msg:"SQL Injection Boolean Pattern Detected (AND 'A'='A')";
  flow:to_server,established;
  content:"AND 'A'='A'"; nocase; http.uri;
  classtype:web-application-attack;
  sid:1000018; rev:2;
)
